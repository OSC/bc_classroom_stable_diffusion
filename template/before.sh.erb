#!/bin/bash

<%- if context.cluster =~ /kubernetes/ -%>
exec &> >(tee -a "pod.log")

export port=8080
export host=$(hostname)

source /etc/profile.d/lmod.sh
source /bin/find_host_port
source /bin/save_passwd_as_secret
<%- else -%>
[[ $(type -t module) == "function" ]] && export -f module

<%- end -%>
